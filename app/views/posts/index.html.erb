  <tbody style="border: 1px solid black; border-collapse: collapse; width: 100%;">
    <% @posts.each do |post| %>
      <tr style="border: 1px solid black; height: 50px;">
        <td style="border: 1px solid black;"><%= post.title %></td>
        <!-- <td><%#= post.body %></td> -->
        <td style="border: 1px solid black;"><%= post.user.first_name %>
        <td style="border: 1px solid black;"><%= link_to 'View Post', post %></td>
        <% if post.user_id == current_user.id %>
        <td style="border: 1px solid black;"><%= link_to 'Edit Post', edit_post_path(post) %></td>
        <td><%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

