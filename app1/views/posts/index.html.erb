<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <!-- <td><%#= post.body %></td> -->
        <td><%= post.user.first_name %>
        <td><%= link_to 'View Post', post %></td>
        <% if post.user_id == current_user.id %>
        <td><%= link_to 'Edit Post', edit_post_path(post) %></td>
        <td><%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Post', new_post_path %>
